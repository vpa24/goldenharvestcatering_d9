{%
  set classes = [
    'field',
    'field--name-' ~ field_name|clean_class,
    'field--type-' ~ field_type|clean_class,
    'field--label-' ~ label_display,
  ]
%}
{%
  set title_classes = [
    'field__label',
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}
<div class="parallax-region">
	{% if label_hidden %}
		{% if multiple %}
			<div{{ attributes.addClass(classes, ['field__items', 'row']) }}>
			{% for item in items %}
				{% if loop.index % 3 == 0 %}
					<div{{ item.attributes.addClass(['field__item', 'col-xs-12 col-sm-6 col-lg-4 pb-3']) }} data-aos="fade-down-right" data-aos-delay="1300">{{ item.content }}</div>
				{% elseif loop.index % 3 == 1 %}
					<div{{ item.attributes.addClass(['field__item', 'col-xs-12 col-sm-6 col-lg-4 pb-3']) }} data-aos="fade-down-left" data-aos-delay="300">{{ item.content }}</div>
				{% else %}
					<div{{ item.attributes.addClass(['field__item', 'col-xs-12 col-sm-6 col-lg-4 pb-3']) }}  data-aos="flip-up" data-aos-delay="800">{{ item.content }}</div>
				{% endif %}
			{% endfor %}
			</div>
		{% else %}
			{% for item in items %}
			<div{{ attributes.addClass(classes, 'field__item') }}>{{ item.content }}</div>
			{% endfor %}
		{% endif %}
		{% else %}
		<div{{ attributes.addClass(classes) }}>
			<div{{ title_attributes.addClass(title_classes) }}>{{ label }}</div>
			{% if multiple %}
			<div class="field__items">
			{% endif %}
			{% for item in items %}
			<div{{ item.attributes.addClass('field__item') }}>{{ item.content }}</div>
			{% endfor %}
			{% if multiple %}
			</div>
			{% endif %}
		</div>
	{% endif %}
</div>